{
  "max_countdowns": {
    "description": "单个用户/群组最大倒数日数量",
    "type": "int",
    "default": 10,
    "hint": "限制每个用户或群组可以创建的倒数日数量，防止滥用"
  },
  "allow_private": {
    "description": "允许私聊使用",
    "type": "bool",
    "default": true,
    "hint": "是否允许用户在私聊中创建和管理倒数日"
  },
  "allow_group": {
    "description": "允许群聊使用",
    "type": "bool", 
    "default": true,
    "hint": "是否允许用户在群聊中创建和管理倒数日"
  },
  "default_remind_days": {
    "description": "默认提前提醒天数",
    "type": "int",
    "default": 1,
    "hint": "设置默认提前多少天开始提醒倒数日"
  },
  "date_format": {
    "description": "日期显示格式",
    "type": "string",
    "default": "YYYY年MM月DD日",
    "options": ["YYYY年MM月DD日", "YYYY-MM-DD", "MM/DD/YYYY"],
    "hint": "选择日期的显示格式"
  }
}